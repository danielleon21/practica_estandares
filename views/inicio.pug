extends ./layout/index

block contenido 
    h2.text-3xl.text-gray-500.font-bold.text-center.my-10 Puestos
    .overflow-x-auto.relative.my-5
        table.w-full.text-sm.text-left.text-gray-500(class="dark:text-gray-400")
            thead.text-xs.text-gray-700.uppercase.bg-gray-50(class="dark:bg-gray-700 dark:text-gray-400")
                tr
                    th.py-3.px-6 idPuesto
                    th.py-3.px-6 Nombre
                    th.py-3.px-6.text-center Acciones
            tbody 
                each puesto in puestos 
                    tr.bg-white.border-b(class="dark:bg-gray-800 dark:border-gray-700")
                        th.py-4.px-6.font-medium.-text-gray-900.whitespace-nowrap(class="dark:text-white") #{puesto.idPuesto}
                        td.py-4.px-6 #{puesto.nombre}
                        td.py-4.px-6.text-center
                            a.text-white.bg-green-700.font-medium.rounded-lg.text-sm.px-5.mr-2.mb-2(href=`/editar-puesto/${puesto.idPuesto}`, class='hover:bg-green-800 focus:ring-4 focus:ring-green-300 py-2.5 dark:bg-green-600 dark:hover:bg-green-700 focus:outline-none dark:focus:ring-blue-800') Editar
                            a.text-white.bg-red-700.font-medium.rounded-lg.text-sm.px-5.mr-2.mb-2(href=`/eliminar-puesto/${puesto.idPuesto}`, class='hover:bg-red-800 focus:ring-4 focus:ring-red-300 py-2.5 dark:bg-red-600 dark:hover:bg-red-700 focus:outline-none dark:focus:ring-red-800') Eliminar

    h2.text-3xl.text-gray-500.font-bold.text-center.my-10 Empleados
    .overflow-x-auto.relative.my-5
        table.w-full.text-sm.text-left.text-gray-500(class="dark:text-gray-400")
            thead.text-xs.text-gray-700.uppercase.bg-gray-50(class="dark:bg-gray-700 dark:text-gray-400")
                tr
                    th.py-3.px-6 idEmpleado
                    th.py-3.px-6 Nombre
                    th.py-3.px-6 Apellido 
                    th.py-3.px-6 Sexo 
                    th.py-3.px-6 Fecha Nacimiento 
                    th.py-3.px-6 Fecha Alta 
                    th.py-3.px-6 idPuesto
                    th.py-3.px-6.text-center Acciones
            tbody 
                each empleado in empleados 
                    tr.bg-white.border-b(class="dark:bg-gray-800 dark:border-gray-700")
                        th.py-4.px-6.font-medium.-text-gray-900.whitespace-nowrap(class="dark:text-white") #{empleado.idEmpleado}
                        td.py-4.px-6 #{empleado.nombre}
                        td.py-4.px-6 #{empleado.apellido}
                        td.py-4.px-6 #{empleado.sexo}
                        td.py-4.px-6 #{empleado.fechaNacimiento}
                        td.py-4.px-6 #{empleado.fechaAlta} 
                        td.py-4.px-6 #{empleado.idPuesto}
                        td.py-4.px-6.text-center
                            a.text-white.bg-green-700.font-medium.rounded-lg.text-sm.px-5.mr-2.mb-2(href=`/editar-empleado/${empleado.idEmpleado}`, class='hover:bg-green-800 focus:ring-4 focus:ring-green-300 py-2.5 dark:bg-green-600 dark:hover:bg-green-700 focus:outline-none dark:focus:ring-blue-800') Editar
                            a.text-white.bg-red-700.font-medium.rounded-lg.text-sm.px-5.mr-2.mb-2(href=`/eliminar-empleado/${empleado.idEmpleado}`, class='hover:bg-red-800 focus:ring-4 focus:ring-red-300 py-2.5 dark:bg-red-600 dark:hover:bg-red-700 focus:outline-none dark:focus:ring-red-800') Eliminar